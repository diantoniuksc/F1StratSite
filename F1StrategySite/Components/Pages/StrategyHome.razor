                <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <!-- Grand Prix cards -->
            <a class="bg-card p-6 flex flex-col justify-between group cursor-pointer" href="#">
                <div>
                    <p class="text-xs mono-font text-[var(--text-secondary)] mb-1">Round 18</p>
                    <h2 class="text-xl font-bold text-white mb-2">United States Grand Prix</h2>
                    <p class="text-sm text-[var(--text-secondary)] mono-font">Circuit of the Americas</p>
                </div>
                <div class="mt-6 flex justify-end items-center">
                    <span class="text-sm text-[var(--text-secondary)] group-hover:text-white transition-colors">View Analysis →</span>
                </div>
            </a>
            <a class="bg-card p-6 flex flex-col justify-between group cursor-pointer" href="#">
