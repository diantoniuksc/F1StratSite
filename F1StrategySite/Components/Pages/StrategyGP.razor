﻿@using Data
@using AdditionalStrategyElements
@page "/Strategy/{GrandPrixName}"

<script src="/js/rateLimiter.js"></script>
<script>rateLimitPageLoads(15, 60000, 'strategygp:loads');</script>

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Race Strategy Overview</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;500;700&amp;family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <style type="text/tailwindcss">
        :root {
            --primary-color: #EF4444;
            --background-dark: #18181c;
            --background-light: #141414;
            --border-color: #262626;
            --text-primary: #E5E7EB;
            --text-secondary: #888888;
            --soft-tyre: #EF4444;
            --medium-tyre: #F59E0B;
            --hard-tyre: #E5E7EB;
        }

        .bg-card {
            background-color: var(--background-light);
            border-radius: 0.5rem;
            border: 1px solid var(--border-color);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
        }

        .tyre-segment {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding-right: 0.5rem;
            font-weight: 500;
            font-size: 0.75rem;
            color: var(--background-dark);
            position: relative;
            transition: width 0.5s ease-in-out;
            font-family: 'Roboto Mono', monospace;
        }

        /* Add a subtle separator so two stints with the same compound don't visually merge */
        .tyre-segment::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px; /* small gray marker */
            background-color: rgb(107, 34, 34);
            opacity: 0.85;
            pointer-events: none;
        }

        .tyre-segment:first-child::before {
            display: none;
        }

    </style>
</head>
<div class="strategy-root p-6 md:p-10 min-h-screen">
    <div class="max-w-screen-2xl mx-auto">
        <header class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10 pb-6 border-b border-[var(--border-color)]">
            <div class="mb-6 md:mb-0">
                <h1 class="text-3xl font-bold text-white tracking-tight">Race Strategy Analysis</h1>
                <p class="text-md text-[var(--text-secondary)] mono-font">@GrandPrixName</p>
            </div>
        </header>
        <main class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <div class="lg:col-span-8 bg-card p-6 md:p-8">
                <div class="flex justify-between items-center mb-8">
                    <h2 class="text-2xl font-bold text-white">Driver Stint Visualizer</h2>
                    <div class="flex items-center space-x-2 text-sm text-[var(--text-secondary)] mono-font">
                        <span>0 Laps</span>
                        <div class="w-24 h-0.5 bg-[var(--border-color)]"></div>
                        <span>@totalLaps Laps</span>
                    </div>
                </div>
                <DriverStintVisualizer GrandPrixName="@GrandPrixName" TotalLaps="@totalLaps" Year="@Year"></DriverStintVisualizer>
            </div>

            <aside class="lg:col-span-4 space-y-9">
                <TyreCompoundKey GrandPrixName="@GrandPrixName" Year="@Year"></TyreCompoundKey>
                <KeyRaceStatistics GrandPrixName="@GrandPrixName" Year="@Year"></KeyRaceStatistics>
            </aside>
        </main>
    </div>
</div>

@code {
    [Parameter]
    public string GrandPrixName { get; set; } = string.Empty;

    private int totalLaps;
    protected int Year { get; set; } = 2025;
    protected override void OnInitialized()
    {
        totalLaps = new GPInfo(GrandPrixName, Year).GetTotalLaps();
    }
}